<%= form_for(@member) do |f| %>
<div class="row">
  <% if @member.errors.any? %>
<div class=" medium-12 columns medium-centered">
    <div id="error_explanation error">
      <h2><%= pluralize(@member.errors.count, "error") %>:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    </div>
  <% end %>
  </div>
<div class="row ">

  <div class="field small-6 columns">
    <%= f.label :first_name, class: "left"%>
    <%= f.text_field :first_name, placeholder: "First Name" %>
  </div>

   <div class="field small-6 columns">
    <%= f.label :last_name, class: "left"%>
    <%= f.text_field :last_name, placeholder: "Last Name" %>
  </div>
</div>

<div class="row">
    <div class="field small-6 columns">
      <%= f.label :email, class: "left" %>
      <%= f.email_field :email, placeholder: "Valid email address" %>
    </div>

    <div class="field small-6 columns">
      <%= f.label :mobile, class: "left" %>
      <%= f.text_field :mobile, placeholder: "Mobile Phone Number" %>
    </div>
</div>
<div class="row">
    <div class="actions">
      <%= f.submit "Make me a member",class: "button radius small"%>
    </div>
</div>
<% end %>